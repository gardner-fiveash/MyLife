<div>
	<%= link_to image_tag("turtle.png"), "/homes" %>
</div>
<h1> Steps of <%= params[:year] %> </h1>
<div class="seeall">
<%= form_tag "/steps", method: 'GET' do %>
	<%= text_field_tag 'query', params[:query], placeholder: "Search Steps", onkeyup: "" %>
	
	<%= link_to "See all", "/steps"  %>
</div>
<% end %>

<div class="homecreatenewstepbutton">
	<%= link_to "Create New Step", new_step_path, class: 'btn btn-info' %>
</div>	

<div class="btn-group">
    <button data-toggle="dropdown" class="btn dropdown-toggle">Filter Tags<span class="caret"></span></button>
    <ul class="dropdown-menu">
        <li><a href="#">Travel</a></li>
        <li><a href="#">Journal</a></li>
        <li><a href="#">Hobbies</a></li>
        <li><a href="#">Bucket List</a></li>
        <li><a href="#">First Time I...</a></li>
        <li><a href="#">Dream</a></li>
        <li><a href="#">Favorites</a></li>
    </ul>
</div>
<br/><br/>
<div class="row index-row">
	<div class="col-sm-4">
		<h4 class="stepstitlelabel">Title</h4>
	</div>
	<div class="col-sm-4 middle-col">
		<h4 class="stepstagslabel">Tags</h4>
	</div>
	<div class="col-sm-4">
	</div>
</div>


<hr color="#000">




<div>
	<% @steps.each do |step| %>
		<li class="steptitles">
			<%= link_to step.title, step_path(step), :method => :get %>
			</br>
		</li>
		</br>
		<p class="stepstags">
			<%= step.tags %>
		</p>
		<p>
			Date: <%= step.event_date.strftime("%m/%d/%Y") %>
		</p>
		
		<p class="stepsdeletebutton">
			<%= link_to image_tag("trashcan.png"), step_path(step), :method => :delete %>
		</br>
		</p>
		<hr color="#8DB477">
	<% end %>
	</br>
</div>